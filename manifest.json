{
    "manifest_version": 3,
    "name": "WhatsApp Direct Link",
    "description": "With this extension it is possible to create links to WhatsApp in a simple and free way.",
    "author": "Adson Nael",
    "version": "0.0.1",
    "icons": {
        "16": "./icon/logo-16.png",
        "32": "./icon/logo-32.png",
        "48": "./icon/logo-48.png",
        "128": "./icon/logo-128.png"
    },
    "action": {
        "default_popup": "./index.html",
        "default_icon": "./icon/logo-128.png"
    }
}